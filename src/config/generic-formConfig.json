{
  "apiEndpoint": "https://api.example.com/submit",
  "formFields": [
    {
      "id": "name",
      "label": "Full Name",
      "type": "text",
      "required": true,
      "placeholder": "Enter your full name"
    },
    {
      "id": "email",
      "label": "Email Address",
      "type": "email",
      "required": true,
      "placeholder": "Enter your email"
    },
    {
      "id": "age",
      "label": "Age",
      "type": "number",
      "required": true,
      "placeholder": "Enter your age"
    },
    {
      "id": "occupation",
      "label": "Occupation",
      "type": "select",
      "required": false,
      "options": [
        "Student",
        "Employed",
        "Self-employed",
        "Retired"
      ]
    },
    {
      "id": "message",
      "label": "Message",
      "type": "textarea",
      "required": false,
      "placeholder": "Enter your message"
    }
  ],
  "responseFields": [
    {
      "id": "status",
      "label": "Status",
      "type": "text"
    },
    {
      "id": "message",
      "label": "Response Message",
      "type": "text"
    },
    {
      "id": "timestamp",
      "label": "Timestamp",
      "type": "text"
    }
  ]
} 